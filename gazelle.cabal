name:                gazelle
version:             0.1.0.0
-- synopsis:
-- description:
license:             MIT
license-file:        LICENSE
author:              Matt Robinson
maintainer:          mrobinson7627@gmail.com
-- copyright:
category:            Network
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
    Network.Gazelle
    Network.Gazelle.Actions
    Network.Gazelle.Actions.Artist
    Network.Gazelle.Actions.Index
    Network.Gazelle.Actions.Torrent
    Network.Gazelle.Login
    Network.Gazelle.Routes
    Network.Gazelle.Routes.Artist
    Network.Gazelle.Routes.Index
    Network.Gazelle.Routes.Torrent
    Network.Gazelle.Types
    Network.Gazelle.Types.Artist
    Network.Gazelle.Types.Error
    Network.Gazelle.Types.Gazelle
    Network.Gazelle.Types.Index
    Network.Gazelle.Types.Torrent
  -- other-modules:
  -- other-extensions:
  build-depends:        base >=4.8 && <4.9,
                        api-builder,
                        aeson,
                        text,
                        http-types,
                        http-conduit,
                        http-client,
                        mtl,
                        free,
                        transformers,
                        http-client-tls,
                        bytestring,
                        scientific
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings,
                       GADTs,
                       GeneralizedNewtypeDeriving,
                       LambdaCase,
                       DeriveDataTypeable,
                       DeriveGeneric

executable gazelleTest
    main-is: Main.hs
    default-language: Haskell2010
    build-depends: base >=4.8 && <4.9, gazelle, transformers, bytestring, http-client, http-client-tls, text
    default-extensions: OverloadedStrings
